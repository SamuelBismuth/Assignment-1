<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gis.gisapplication.MacActivity">

    <EditText
        android:id="@+id/macAlgo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MAC address"/>

    <EditText
        android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Latitude" />

    <EditText
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Longitude" />

    <EditText
        android:id="@+id/altitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Altitude" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="algo1"
        android:text="ENTER"/>

    <EditText
        android:id="@+id/mac1Algo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First MAC address"/>

    <EditText
        android:id="@+id/signal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Signal"/>

    <EditText
        android:id="@+id/mac2Algo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Second MAC address"/>

    <EditText
        android:id="@+id/signal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Signal"/>

    <EditText
        android:id="@+id/mac3Algo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Third MAC address"/>

    <EditText
        android:id="@+id/signal3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Signal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="algo2"
        android:text="ENTER"/>

</LinearLayout>
